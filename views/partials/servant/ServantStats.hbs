<style>
    .box {
        position: relative;
    }
</style>
<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col center-align">
                <div class="flex-servant">
                    <div class="splide">
                        <div class="splide__track">
                            <div class="splide__list">
                                {{#each ascension}}
                                <div class="splide__slide">
                                    <a href="{{this}}" data-lightbox="image" data-title="Ascension {{@key}}º">
                                        <div style="background-image: url({{this}})" class="heading-frame">
                                            <h2>{{{../rarity}}}</h2>
                                        </div>
                                    </a>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <div class="col">
            <div class="row">
                <div class="col m10 s12">
                    <h5><i style="vertical-align: middle;"><img height="30px" src="{{classIcon}}"></i> {{servant.name}}
                    </h5>
                </div>
                <div class="col m2">
                    <h5 class="right">{{rarity}}</h5>
                </div>
            </div>
            <hr>
            <table class="centered">
                <tbody>
                    <tr>
                        <td><b>ID</b> | {{servant.id}}</td>
                        <td><b>Rarity</b> | {{rarity}}</td>
                        <td><b>HP</b> | {{servant.hpBase}} <b>·</b> {{servant.hpMax}}</td>
                    </tr>
                    <tr>
                        <td><b>Class</b> | <i style="vertical-align: middle;"><img height="30px"
                                    src="{{classIcon}}"></i></td>
                        <td><b>Cost</b> | {{servant.cost}}</td>
                        <td><b>ATK</b> | {{servant.atkBase}} <b>·</b> {{servant.atkMax}}</td>
                    </tr>
                    <tr>
                        <td><b>Death Chance</b> | {{stats.deathChance}}</td>
                        <td colspan="3"> {{> servant/Decks }}</td>
                    </tr>
                    <tr>
                        <td><b>Star Weight</b> | {{stats.star.weight}}</td>
                        <td colspan="2"><b>Star Gen</b> | {{stats.star.gen}}</td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>